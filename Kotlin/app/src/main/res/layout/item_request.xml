<?xml version="1.0" encoding="utf-8"?>
<!--<androidx.cardview.widget.CardView -->
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:id="@+id/item_notification">

    <!-- ConstraintLayout for top section (Date and 'New' text) -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="start|center_vertical">

            <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2024년 10월 07일"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAlignment="viewStart"
                    android:includeFontPadding="false" />

            <TextView
                    android:id="@+id/textViewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="다이어리 구매 요청"
                    android:textColor="@android:color/black"
                    android:layout_marginVertical="3dp"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/textViewStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:backgroundTint="#2196F3"
                        android:text="Status"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginVertical="3dp"
                        android:padding="2dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginEnd="3dp" />

                <TextView
                        android:id="@+id/textViewNew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:backgroundTint="#BACC0000"
                        android:text="New"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:layout_marginEnd="8dp" />

                <TextView
                        android:id="@+id/textViewName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="admin"
                        android:layout_marginEnd="8dp"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="16sp"
                        android:textAlignment="textStart" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:layout_gravity="center_vertical">

            <!-- Date TextView -->

            <!-- 'New' TextView aligned to the top-right -->

            <TextView
                    android:id="@+id/textViewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+15"
                    android:textColor="#009688"
                    android:textSize="25dp"
                    android:textStyle="normal"
                    android:includeFontPadding="false" />

            <TextView
                    android:id="@+id/additional"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구매수량"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textColor="@android:color/darker_gray" />
        </LinearLayout>

    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/viewDivider"
            android:background="@color/background_gray"
            />

    <!-- Content Section: Icon and Texts -->


</LinearLayout>