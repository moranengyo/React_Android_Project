<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- In progress: Set color to orange when the view is selected and enabled -->
        <item android:color="@color/basicColor" android:state_selected="true" android:state_enabled="true"/>

        <!-- Waiting: Set color to blue when the view is not enabled (disabled) -->
        <item android:color="@color/blue" android:state_enabled="false"/>

        <!-- Pressed state (pink) -->
        <item android:color="@color/pink" android:state_pressed="true"/>

        <!-- Default enabled state (sub-green when active) -->
        <item android:color="@color/basicColor" android:state_enabled="true"/>


        <item android:color="@color/white"/>


</selector>