<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#BDBDBD" /> <!-- Shadow color -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Main background layer -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Main background color -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
        </shape>
    </item>

</layer-list>